# Evolution API v2.1.0 - Configuração mínima e estável
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=http://localhost:8080

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# Logs
LOG_LEVEL=ERROR
LOG_COLOR=false
LOG_BAILEYS=error

# Instâncias
DEL_INSTANCE=false
